<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Flight Schedule Parser • MFX</title>
  <style>
    :root {
      --primary: #0066cc;
      --primary-dark: #0055aa;
      --success: #10b981;
      --bg: #f9f9f9;
      --card-bg: #ffffff;
      --text: #1f2937;
      --border: #e5e7eb;
      --shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f172a;
        --card-bg: #1e293b;
        --text: #e2e8f0;
        --border: #334155;
      }
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      padding: 20px 15px;
      line-height: 1.6;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .card {
      background: var(--card-bg);
      border-radius: 20px;
      padding: 40px 30px;
      box-shadow: var(--shadow);
      flex: 1;
      margin-bottom: 24px;
    }

    h1 {
      font-size: 2rem;
      text-align: center;
      color: var(--primary);
      margin-bottom: 32px;
      font-weight: 700;
    }

    .upload-zone {
      border: 3px dashed var(--border);
      border-radius: 16px;
      padding: 50px 20px;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s ease;
      background: rgba(0, 102, 204, 0.02);
      position: relative;
    }

    .upload-zone:hover,
    .upload-zone.dragover {
      border-color: var(--primary);
      background: rgba(0, 102, 204, 0.08);
      transform: translateY(-2px);
    }

    .upload-icon {
      width: 72px;
      height: 72px;
      stroke: var(--primary);
      margin-bottom: 16px;
    }

    .upload-zone p {
      margin: 8px 0;
      font-size: 1.1rem;
    }

    .upload-zone small {
      color: #64748b;
      font-size: 0.9rem;
    }

    input[type="file"] {
      position: absolute;
      width: 1px;
      height: 1px;
      opacity: 0;
      overflow: hidden;
      z-index: -1;
    }

    .submit-btn {
      margin-top: 24px;
      width: 100%;
      padding: 16px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }

    .submit-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
    }

    .result-container {
      margin-top: 40px;
      animation: fadeIn 0.6s ease-out;
    }

    .result-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
      flex-wrap: wrap;
      gap: 12px;
    }

    .result-header h2 {
      color: var(--primary);
      font-size: 1.5rem;
    }

    .copy-btn {
      background: var(--success);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .copy-btn:hover {
      background: #059669;
      transform: translateY(-2px);
    }

    .copy-btn svg {
      width: 20px;
      height: 20px;
    }

    .result {
      background: #0f172a;
      color: #e2e8f0;
      padding: 24px;
      border-radius: 12px;
      font-family: 'Courier New', monospace;
      white-space: pre-wrap;
      word-break: break-all;
      max-height: 70vh;
      overflow-y: auto;
      border: 1px solid #334155;
      line-height: 1.6;
      font-size: 0.95rem;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .footer {
      text-align: center;
      padding: 20px;
      color: #94a3b8;
      font-size: 0.9rem;
    }

    @media (min-width: 640px) {
      h1 { font-size: 2.4rem; }
      .card { padding: 60px; }
    }
  </style>
</head>
<body>
<div class="container">
  <div class="card">
    <h1>Flight Schedule Parser</h1>

    <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
      <div class="upload-zone" id="dropZone">
        <svg class="upload-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="12" y1="18" x2="12" y2="12"></line>
          <line x1="9" y1="15" x2="15" y2="15"></line>
        </svg>
        <p><strong>Click or Drag a CSV file here</strong></p>
        <small>Only .csv format is supported</small>

        <input type="file" name="csv_file" id="csv_file" accept=".csv,text/csv" required />
      </div>

      <button type="submit" class="submit-btn" id="submitBtn">
        Process CSV
      </button>
    </form>

    {{#if output}}
      <div class="result-container">
        <div class="result-header">
          <h2>Done!</h2>
          <button type="button" class="copy-btn" id="copyBtn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
            <span>Copy All</span>
          </button>
        </div>
        <pre class="result" id="resultText">{{output}}</pre>
      </div>
    {{/if}}
  </div>

  <div class="footer">
    MFX Flight Schedule Parser • {{now format="DD MMM YYYY, HH:mm"}}
  </div>
</div>

<script>
  const dropZone = document.getElementById('dropZone');
  const fileInput = document.getElementById('csv_file');
  const submitBtn = document.getElementById('submitBtn');

  // Клик по зоне → открываем выбор файла
  dropZone.addEventListener('click', () => fileInput.click());

  // Drag & Drop
  ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(event => {
    dropZone.addEventListener(event, e => {
      e.preventDefault();
      e.stopPropagation();
    });
  });

  ['dragenter', 'dragover'].forEach(event => {
    dropZone.addEventListener(event, () => dropZone.classList.add('dragover'));
  });

  ['dragleave', 'drop'].forEach(event => {
    dropZone.addEventListener(event, () => dropZone.classList.remove('dragover'));
  });

  dropZone.addEventListener('drop', e => {
    const files = e.dataTransfer.files;
    if (files.length) {
      fileInput.files = files;
      updateButton();
    }
  });

  // Обновляем кнопку при выборе файла
  fileInput.addEventListener('change', updateButton);

  function updateButton() {
    if (fileInput.files.length > 0) {
      // Original text: `Обработать: ${fileInput.files[0].name}`
      submitBtn.textContent = `Process: ${fileInput.files[0].name}`;
    } else {
      // Original text: 'Обработать CSV'
      submitBtn.textContent = 'Process CSV';
    }
  }

  // Копирование результата
  const copyBtn = document.getElementById('copyBtn');
  const resultText = document.getElementById('resultText');

  if (copyBtn && resultText) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(resultText.textContent);
        const span = copyBtn.querySelector('span');
        const original = span.textContent;
        // Original text: 'Скопировано!'
        span.textContent = 'Copied!';

        setTimeout(() => {
          span.textContent = original;
        }, 2000);
      } catch {
        // Original alert text: 'Не удалось скопировать'
        alert('Failed to copy');
      }
    });
  }
</script>
</body>
</html>